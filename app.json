{
  "expo": {
    "name": "Servify",
    "description": "Easy way to find local services brougth to your home, contact them and make your life easier ",
    "slug": "servify",
    "privacy": "public",
    "sdkVersion": "28.0.0",
    "platforms": [
      "ios",
      "android"
    ],
    "version": "1.0.3",
    "orientation": "portrait",
    "icon": "./assets/servifyIcon2.png",
    "splash": {
      "image": "./assets/servifySplashOrange.png",
      "resizeMode": "cover",
      "backgroundColor": "#FF7043"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.jorgebaralt.servify",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Servify uses current location to find and display nearby services"
      }
    },
    "android": {
      "package": "com.jorgebaralt.servify",
      "versionCode": 2
    }
  }
}